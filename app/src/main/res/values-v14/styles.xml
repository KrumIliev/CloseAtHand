<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@drawable/touch_selector_menu</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_primary_color</item>
    </style>

    <!-- Main activity theme -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/LogoActionBar</item>
    </style>

    <style name="LogoActionBar" parent="MyActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/ic_logo</item>
    </style>
</resources>
